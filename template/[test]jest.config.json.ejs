{
  "roots": ["src", "test"]<% if (typescript) { %>,
  "preset": "ts-jest"<% } %>,
  "testMatch": ["<rootDir>/test/**/*"],
  "moduleNameMapper": {
    "^~/(.+)$": "<rootDir>/src/$1"
  },
  "collectCoverage": true,
  "collectCoverageFrom": ["<rootDir>/src/**/*"],
  "coverageReporters": ["lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
